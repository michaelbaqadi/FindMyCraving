<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
     >
 
    <ImageView
        android:id="@+id/dishpicture"
        android:layout_width="122dp"
        android:layout_height="83dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:fillViewport="true"
        android:maxHeight="83dp"
        android:maxWidth="250dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dishname"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="DishName" 
            android:textSize="12dp"
            android:textStyle="bold"
            />

         <TextView
             android:id="@+id/restaurantname3"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:text="RestaurantName"
             android:textColor="#888888"
             android:textSize="9sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dishRating2"
                android:layout_width="199dp"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:text="Rating:" />

            <RatingBar
                android:id="@+id/rating2"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="42dp"
                android:isIndicator="true"
                android:numStars="5" />

        </RelativeLayout>
		
		<TextView
            android:id="@+id/dishPrice1"
            android:layout_width="199dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:text="Price: " />
        
        <TextView
            android:id="@+id/dishCalories2"
            android:layout_width="199dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:text="Calories: " />
        
    </LinearLayout>
        

</LinearLayout>