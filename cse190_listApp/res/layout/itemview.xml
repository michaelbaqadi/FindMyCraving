<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
     >
     
    <ImageView
        android:id="@+id/dishpicture"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:fillViewport="true"
        android:maxHeight="100dp"
        android:maxWidth="140dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dishname"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="DishName" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dishRating2"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:text="Rating:" />

            <RatingBar
                android:id="@+id/rating2"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:isIndicator="true"
                android:numStars="5" />

        </RelativeLayout>

        <TextView
            android:id="@+id/dishCalories2"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:text="DishCalories" />
        
        <TextView
            android:id="@+id/dishPrice1"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:text="DishPrice: " />

        <TextView
            android:id="@+id/restaurantname3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="RestaurantName" />
    </LinearLayout>

</LinearLayout>