<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/scrollView1"
     android:layout_width="match_parent"
     android:layout_height="match_parent" 
     android:background="@drawable/explode_bkg">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginTop="40dp"
	    android:layout_marginLeft="40dp"
	    android:layout_marginRight="40dp"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="User Signup"
	        android:textStyle="bold"
	        android:textColor="#ab2224"
	        android:textSize="24sp" />
	    <TextView 
	      	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:text="You can write your own reviews of dishes by creating an account"
	        android:layout_marginBottom="20dp"
	        android:textColor="#ab2224"
	        android:textSize="12sp" />
	
	    <EditText
	        android:id="@+id/userNameInput"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginBottom="20dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:lines="1"
	        android:singleLine="true" 
	        android:ems="10" 
	        android:hint="User Name"
	        android:background="@drawable/rectangleborder"
	        />
	      
	    <EditText
	        android:id="@+id/password1Input"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginBottom="20dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:ems="10"
	        android:hint="Password"
	        android:inputType="textPassword" 
	        android:background="@drawable/rectangleborder"
	        />
	
	    <EditText
	        android:id="@+id/password2Input"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginBottom="20dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:hint="Re-type Password"
	        android:ems="10"
	        android:inputType="textPassword"
	        android:background="@drawable/rectangleborder"
	        />
	
	    <EditText
	        android:id="@+id/email2"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginBottom="20dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:ems="10"
	        android:hint="User Email"
	        android:inputType="textEmailAddress" 
	        android:background="@drawable/rectangleborder"
	        />
	    
	
	     <RelativeLayout
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content" >
	
	         <Button
	             android:id="@+id/Update_btn"
	             android:layout_width="100dp"
	             android:layout_height="wrap_content"
	             android:layout_centerHorizontal="true"
	             android:onClick="signUpClick"
	             android:text="Sign Up" 
	             android:textColor="#ffffff"
	             android:background="@drawable/red_box"
	             />
	     </RelativeLayout>
	</LinearLayout>
</LinearLayout>
</ScrollView>